<div class="container">
{{#if automobili}}
    <script> console.log("UDJOH"); </script>
    {{#each automobili}}
        <div class="col-12 mt-3 mb-3">
            <div class="row  bg-primary text-light pt-2 pb-2 text-lg">
                <div class="col-md-2 text-center">Marka</div>
                <div class="col-md-2 text-center">Model</div>
                <div class="col-md-2 text-center">Godiste</div>
                <div class="col-md-1 text-center">Kubikaza</div>
                <div class="col-md-2 text-center">Karoserija</div>
                <div class="col-md-2 text-center">Gorivo</div>
                <div class="col-md-1 text-center"></div>
            </div>
            <div class="row  bg-light pt-2 pb-3 border">
                <div class="col-md-2 text-center">{{this.marka}}</div>
                <div class="col-md-2 text-center">{{this.model}}</div>
                <div class="col-md-2 text-center">{{this.godiste}}</div>
                <div class="col-md-1 text-center">{{this.kubikaza}}</div>
                <div class="col-md-2 text-center">{{this.karoserija}}</div>
                <div class="col-md-2">
                    {{#each this.gorivo}}
                        <div class="col text-center">
                            {{this}}
                        </div>
                    {{/each}}
                </div>
                <div class="col-md-1 text-center"><a href="/izmeni?id={{this.id}}">Izmeni</a></div>
            </div>
        </div>
    {{/each}}
{{/if}}
</div>
